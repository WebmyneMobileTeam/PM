<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.webmyne.paylabas.userapp.mobile_topup.MobileTopupRechargeFragment">

    <!--Bottom Linear-->
    <RelativeLayout
        android:background="@android:color/white"
        android:layout_marginTop="8dp"
        android:id="@+id/registrationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:background="@android:color/white"
        android:id="@+id/bottomLinearGenerateGC"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
.
        <TextView
            android:textColor="@android:color/white"
            android:drawableRight="@drawable/ic_action_hardware_keyboard_arrow_right"
            android:id="@+id/btnNext"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/btn_next"
            android:background="@drawable/button_selector"
            android:layout_weight="1" />

    </LinearLayout>

    <ScrollView
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLinearGenerateGC"
        android:fillViewport="false"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--main Linear-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">

    <TextView
        android:fontFamily="sans-serif-condensed"
        android:text="@string/select_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="@dimen/medium_text" />


        <Spinner
            android:spinnerMode="dialog"
            android:id="@+id/spCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"></Spinner>

        <EditText
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:hint="@string/enter_mobile"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/edMobileNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"/>
        <LinearLayout
            android:id="@+id/linearMobileHome"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtCurrency"
                android:layout_margin="4dp"
                android:textSize="@dimen/normal_text"
                android:layout_width="wrap_content"
                android:text="EUR"
                android:layout_height="wrap_content" />
            <EditText

                android:inputType="numberDecimal"
                android:hint="@string/enter_cashout_amount"
                android:fontFamily="sans-serif-condensed"
                android:id="@+id/edCashoutAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"/>
        </LinearLayout>




        <TextView
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Select Identity Proof Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/medium_text" />

        <Spinner

            android:spinnerMode="dialog"
            android:id="@+id/spIdentityProof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"></Spinner>

        <EditText
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:hint="@string/enter_form_id"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/edFormId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"/>
        <EditText
            android:layout_marginTop="10dp"
            android:inputType="numberPassword"
            android:hint="@string/enter_pin"
            android:fontFamily="sans-serif-condensed"
            android:id="@+id/edPin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"/>

        <TextView
            android:textSize="20sp"
            android:id="@+id/LiveRate"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textColor="@color/theme_primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
</RelativeLayout>