<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Launcher">

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/demo"
        android:scaleType="centerCrop" />




    <RelativeLayout
        android:padding="16dp"
        android:background="#cc000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout

                android:layout_marginBottom="@dimen/activity_margin"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgUS"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_united_states"/>
                <ImageView
                   android:id="@+id/imgFrance"
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_france"/>
                </LinearLayout>



            <EditText
                android:id="@+id/etMerchantId"
                android:layout_marginTop="16dp"
               android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_hint_merchant_id"
                android:background="#fff"
                android:textSize="18sp"
                android:gravity="left"
                android:textColor="#000"
                android:padding="8dp" />

            <EditText
                android:id="@+id/etSecretId"
                android:textColor="#000"
                android:layout_marginTop="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_hint_merchant_password"
                android:background="#fff"
                android:textSize="18sp"
                android:gravity="left"
                android:padding="8dp" />

            <TextView
                android:id="@+id/btnLoginNext"
                android:layout_marginTop="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_next"
                android:textColor="#fff"
                android:background="#70ffffff"
                android:textSize="18sp"
                android:gravity="center"
                 />


        </LinearLayout>


    </RelativeLayout>

    <ImageView
        android:layout_marginTop="16dp"
        android:contentDescription="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/footer_logo"
        android:scaleType="centerInside" />


</RelativeLayout>
