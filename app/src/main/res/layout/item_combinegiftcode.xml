<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:inputType="number"
            android:maxLength="9"
            android:id="@+id/entergiftcode_combinegiftcode"
            android:textColor="#000"
            android:hint="giftcode"
            android:fontFamily="sans-serif-condensed"
            android:textSize="@dimen/normal_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <LinearLayout
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAmountGCCombineGC"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/txtNewAmountGCCombineGC"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/normal_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="New Amount"
                    />

                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginRight="8dp"
                    android:id="@+id/btnDeleteCombineGiftCode"
                    android:textSize="22sp"
                    android:gravity="right"
                    android:layout_gravity="right|center_vertical"
                    android:textColor="@color/theme_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"></TextView>
                </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>